@{
}
@model Cinema.Domain.DomainModels.Order

<div class="container">
    <h2 class="text-center">Order: @Model.Id</h2>
    <h5>User: @Model.User.FirstName @Model.User.LastName</h5>
    <h5>Email: @Model.User.Email</h5>
    <h5>Total Price: @ViewData["TotalPrice"]</h5>
    <h5 class="mt-3 text-center">Ordered Tickets</h5>
    @for (int i = 0; i < Model.TicketsInOrder.Count(); i++)
    {
        var item = Model.TicketsInOrder.ElementAt(i);

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.OrderedTicket.MovieImage" style="height: 50%;" alt="Image for product!">

                    <div class="card-body">
                        <h3 class="card-title">@item.OrderedTicket.MovieName</h3>
                       


                        <h6>Price: $@item.OrderedTicket.Price</h6>
                        <h6>Quantity: @item.Quantity</h6>
                        <h6>Total: $@(item.OrderedTicket.Price * item.Quantity)</h6>
                    </div>

                </div>
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>
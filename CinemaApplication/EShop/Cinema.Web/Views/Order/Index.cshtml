@model List<Cinema.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Order Id</th>
                    <th scope="col">Total Price</th>
                    <th scope="col">Action</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active Products</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.Id</td>
                            <td>@item.TotalPrice</td>
                            <td>
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                                <a asp-controller="Order" asp-action="ExportToPDF" asp-route-id="@item.Id" class="btn btn-primary">Export as PDF</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
           
        </table>
    </div>
    
</div>